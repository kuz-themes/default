block content
	div.question
		div.question !{kuz.contentSections.question.getHtml()}

		if kuz.contentSections.answer
			div.answer !{kuz.contentSections.answer.getHtml()}

		if kuz.contentSections.explanation
			div.explanation !{kuz.contentSections.explanation.getHtml()}

		if kuz.contentSections.comment
			div.comment !{kuz.contentSections.comment.getHtml()}


