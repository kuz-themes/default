
extends kaagazz

block content
	div.question !{sections.question.Html()}

	div.options
		div.option= sections.a.Content()
		div.option= sections.b.Content()
		div.option= sections.c.Content()
		div.option= sections.d.Content()

	if sections.answer
		div.answer !{sections.answer.Content()}

	if sections.explanation
		div.explanation !{sections.explanation.Html()}

	if sections.comment
		div.comment !{sections.comment.Html()}


