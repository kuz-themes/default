
mixin CategoriesSectionFooter()
	div.categories
		h4 Categories Index
		ul
			each category in kuz.site.Categories()
				+CategoryWithCounter(category)

mixin TagsSectionFooter()
	div.tags
		h4 Tags Index
		ul
			each tag in kuz.site.Tags()
				+TagWithCounter(tag)

mixin InformationSectionFooter()
	div.info
		h4 More Information
		ul
			each node in kuz.site.meta.json["info"]
				+InfoLink(node)

mixin SocialSectionFooter()
	div.social
		h4 Social Media
		ul
			each node in kuz.site.meta.json["social"]
				+SocialLink(node)

