
mixin NavBar()
	if page.Show("navbar")
		div.navbar
			ul
				each node in page.Site().meta.json["navbar"]	
					li
						a(href=node.url).navbar= node.title

mixin PageImage()
	div.image
		img(src="x/dist/img/user.png")

mixin PageTitle()
	div.title
		h1= page.Title()

mixin PageGitHubSourceLink()
	- let repo = page.Site().meta.json.meta.SITE_REPO
	if repo
		- let source = repo + "/blob/master/" + page.inputFilePath
		div.source
			a(href=source) View Source

mixin PageCategory()
	if page.IsPage() && page.Show("category")
		- let category = page.Category()
		if category
			div.category
				p Posted in #[a(href=category.RelativeURL()).category= category.Title()]
		else
			// page.Category() is null

mixin PageTitle()
	div.title
		h1= page.Title()

mixin PageAuthor()
	if page.IsPage() && page.Show("author")
		- let author = page.Author()
		if author
			div.author
				p Written by #[a(href=author.RelativeURL())= author.Title()]
		else
			// page.Author() is null

mixin PageDescription()
	if page.Show("description")
		div.description
			p= page.Description()

mixin PageTags()
	if page.IsPage() && page.Show("tags")
		div.tags
			ul
				each tag in page.TagObjects()
					+TagWithCounter(tag)


